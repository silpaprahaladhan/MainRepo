                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.PrimaryPhoneNo, "", new { @class = "text-danger required" })
                                               
                                            </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-md-6">
                                            
