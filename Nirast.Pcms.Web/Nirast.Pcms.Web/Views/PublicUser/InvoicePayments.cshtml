                                                    }
                                                    <tr class="even pointer" onclick="location.href ='@(Url.Action("InvoicePayments", "PublicUser", new { @invoice =  item.InvoiceNumber.ToString() }))'">
                                                        @*<td class="col-checkbox"><input class="checkbox" type="checkbox"></td>*@
