@model IEnumerable<Nirast.Pcms.Web.Models.RejectedCaretaker>
<div class=" table--no-card table-responsive  m-b-40">
    <table class="table table-borderless table-striped table-earning padding-top-10 table-font" id="RejectedSchedule">
        <thead>
            <tr class="non-filter-header">
                <th>Rejected Date</th>
                <th>Caregiver Name</th>
                <th>Client Name</th>
                <th>Schedule Date</th>
                <th>Work Shift</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody class="table-font">

            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
            <tr>
                <td class="">@item.DateTime.ToString(System.Configuration.ConfigurationManager.AppSettings["DateFormat"].ToString()) @item.DateTime.ToString("h:mm tt")</td>
                <td>@item.CaretakerName</td>
                <td>@item.ClientName</td>
                <td>@item.ScheduleDate.ToString(System.Configuration.ConfigurationManager.AppSettings["DateFormat"].ToString())</td>
                <td>@item.WorkshiftName</td>
                <td>@((item.Description == null) ? (item.Description == null ? "NA" : item.Description) : item.Description)</td>

            </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>No record found</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>No record found</td>
                </tr>
            }
        </tbody>


    </table>
</div>
