@model IEnumerable<Nirast.Pcms.Web.Models.ServicesViewModel>
<script>
    function getUrlVars() {
        var vars = [], hash;
        var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
        for (var i = 0; i < hashes.length; i++) {
            hash = hashes[i].split('=');
            vars.push(hash[0]);
            vars[hash[0]] = hash[1];
        }
        return vars;
    }
    $(document).ready(function () {
        var serviceId = getUrlVars()["serviceId"];
        $('#service' + serviceId).css("background-color", "#2359a7", "color","white");
    });
</script>
@foreach (var item in Model)
{
    if (item.ServiceId > 0)
    {
        <li style="word-break:break-all" id="service@(item.ServiceId)">@Html.ActionLink(@item.Name, "Search", "Home", new { serviceId = item.ServiceId },null)</li>
    }

}

