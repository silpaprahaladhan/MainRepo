
@model IEnumerable<Nirast.Pcms.Web.Models.ClientModel>
<div class="x_panel">
    <div class="x_title">
        <h2>Client List <small></small></h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>

        </ul>
        <div class="clearfix"></div>
    </div>

    <div class="x_content">
        <input type="hidden" id="hdnCTId" />
        <div class="table-responsive">
            <table class="table table-striped jambo_table bulk_action table-condensed" id="ClientList">
                <thead>
                    <tr class="headings">

                        <th class="column-title col-md-1" style="display: table-cell;">Client Name</th>
                        <th class="column-title" style="display: table-cell;">State</th>
                        <th class="column-title" style="display: table-cell;">Email Address</th>
                        <th class="column-title" style="display: table-cell;">Phone Number</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null)
                    {
                        foreach (var client in Model)
                        {
                    <tr class="even pointer" onclick="location.href ='@(Url.Action("ClientDetails", "Client", new { @clientId = client.ClientId }))'">
                        <td class="col-md-3">@client.ClientName</td>
                        <td>@client.State1</td>
                        <td>@client.EmailId</td>
                        <td>@client.PhoneNo1</td>
                        <td class="text-right"><button class="btn btn-xs btn-primary" title="View Profile" onclick="location.href ='@(Url.Action("ClientDetails", "Client", new { @clientId = client.ClientId }))'"><span class="fa fa-eye"></span></button></td>
                       
                    </tr>
                        }
                    }
                    </tbody>
            </table>
        </div>


    </div>
</div>
<style>
    .viewDetails {
        cursor: pointer;
        color: cornflowerblue;
    }
</style>
<script>
    $('#ClientList').DataTable({
        "pagingType": "full_numbers"
    });
</script>
